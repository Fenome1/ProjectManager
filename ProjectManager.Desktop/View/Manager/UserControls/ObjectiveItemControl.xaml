<UserControl x:Class="ProjectManager.Desktop.View.Manager.UserControls.ObjectiveItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:convertors="clr-namespace:ProjectManager.Desktop.View.Manager.Convertors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <convertors:IsNotNullConverter x:Key="IsNotNullConverter" />
    </UserControl.Resources>
    <Border Margin="5"
            BorderBrush="White"
            BorderThickness="3"
            CornerRadius="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Orientation="Horizontal"
                        VerticalAlignment="Stretch"
                        HorizontalAlignment="Left">

                <!-- Чекбокс для статуса -->
                <CheckBox
                    FontSize="25"
                    IsChecked="{Binding Status}"
                    VerticalAlignment="Center"
                    Margin="5" />

                <!-- Имя задачи -->
                <TextBlock
                    Text="{Binding Name}"
                    TextWrapping="WrapWithOverflow"
                    VerticalAlignment="Center" Margin="5" />

            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal">
                <!-- Если есть дедлайн, отображаем его -->
                <Border VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="5"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="White"
                        Padding="5"
                        Background="White">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding Deadline, Converter={StaticResource IsNotNullConverter}}"
                                    Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        Text="{Binding Deadline, StringFormat='MM.dd.yy'}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Deadline, Converter={StaticResource IsNotNullConverter}}"
                                        Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

                <!-- Если есть приоритет, отображаем его -->
                <Border VerticalAlignment="Center"
                        HorizontalAlignment="Left"
                        Margin="5"
                        CornerRadius="10"
                        BorderThickness="2"
                        BorderBrush="White"
                        Padding="5"
                        Background="{Binding Priority.HexCode}">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger
                                    Binding="{Binding Priority, Converter={StaticResource IsNotNullConverter}}"
                                    Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock
                        Text="{Binding Priority.Name}">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger
                                        Binding="{Binding Priority, Converter={StaticResource IsNotNullConverter}}"
                                        Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Border>

            </StackPanel>

        </Grid>
    </Border>
</UserControl>